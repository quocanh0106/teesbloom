{% style %}
  {% if settings.type_body_font.family != settings.type_heading_font.family %}
    {{ settings.type_heading_font_light | font_face: font_display: 'swap' }}
    {{ settings.type_heading_font | font_face: font_display: 'swap' }}
    {{ settings.type_heading_font_medium | font_face: font_display: 'swap' }}
    {{ settings.type_heading_font_semibold | font_face: font_display: 'swap' }}
    {{ settings.type_heading_font_bold | font_face: font_display: 'swap' }}

    {{ settings.type_body_font_light | font_face: font_display: 'swap' }}
    {{ settings.type_body_font | font_face: font_display: 'swap' }}
    {{ settings.type_body_font_medium | font_face: font_display: 'swap' }}
    {{ settings.type_body_font_semibold | font_face: font_display: 'swap' }}
    {{ settings.type_body_font_bold | font_face: font_display: 'swap' }}
  {% else %}
    {{ settings.type_body_font_light | font_face: font_display: 'swap' }}
    {{ settings.type_body_font | font_face: font_display: 'swap' }}
    {{ settings.type_body_font_medium | font_face: font_display: 'swap' }}
    {{ settings.type_body_font_semibold | font_face: font_display: 'swap' }}
    {{ settings.type_body_font_bold | font_face: font_display: 'swap' }}
  {% endif %}
{% endstyle %}