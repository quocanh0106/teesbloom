{%- style -%}
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media (min-width: 1024px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="page-width section-reviews" data-section-id="{{ section.id }}" id="{{ product.id }}-review">
  {% for block in section.blocks %}
    {%- case block.type -%}
      {%- when '@app' -%}
        {% render block %}
      {%- when 'social_sharing' -%}
        {% render 'share-social', text: 'Share this item: ' %}
    {%- endcase -%}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Section reviews",
    "settings": [
      {
        "type": "header",
        "content": "Padding mobile"
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 40
      },
      {
        "type": "header",
        "content": "Padding desktop"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 40
      }
    ],
    "blocks": [
      {
        "type": "@app"
      },
      {
        "type": "social_sharing",
        "name": "Social sharing",
        "limit": 1,
        "settings": []
      }
    ],
    "presets": [
      {
        "name": "Section reviews"
      }
    ]
  }
{% endschema %}