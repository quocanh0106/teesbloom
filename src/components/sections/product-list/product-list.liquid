{%- if section.settings.collection.products != blank -%}
  {%- style -%}
    [data-section-id="{{ section.id }}"] {
      background: {{ section.settings.background_color }};
      padding-top: {{ section.settings.padding_top_mb }}px;
      padding-bottom: {{ section.settings.padding_bottom_mb }}px;
    }

    @media screen and (min-width: 1024px) {
      [data-section-id="{{ section.id }}"] {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  <div data-section-id="{{ section.id }}" {% if section.settings.secondary != blank and section.settings.secondary != 'transparent' %} style="--color-secondary: {{ section.settings.secondary }}"{% endif %}>
    <div class="block relative overflow-hidden{% unless section.settings.fullwidth %} page-width{% endunless %}">
      <div class="flex items-center justify-between gap-2 mb-5">
        {% if section.settings.heading %}
          <h2 class="text-base lg:text-lg font-semibold capitalize text-center text-primary mb-0">{{ section.settings.heading | escape }}</h2>
        {% endif %}
        <a href="{{ section.settings.collection.url }}" class="text-base leading-none flex items-center gap-1.5 !text-secondary no-underline hover:underline">
          <span>{{ section.settings.button_text }}</span>
          {% render 'icon-right', class: 'w-4 h-4' %}
       </a>
      </div>
      <div class="grid gap-y-8 gap-x-4 lg:gap-x-6 grid-cols-{{ section.settings.product_per_row_mobile }} md:grid-cols-{{ section.settings.product_per_row_tablet }} lg:grid-cols-{{ section.settings.product_per_row }} transition-all duration-500 overflow-hidden">
        {%- for product in section.settings.collection.products limit: section.settings.limit -%}
          {%- render 'product-card', product: product -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}
{% schema %}
  {
    "name": "Products list",
    "tag": "section",
    "settings": [
      {
        "type": "checkbox",
        "id": "fullwidth",
        "label": "Full width",
        "default": false
      },
      {
        "type": "color",
        "id": "secondary",
        "label": "Secondary Color"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background",
        "default": "#FAFAFA"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      },
      {
        "type": "range",
        "id": "product_per_row",
        "label": "Products per row",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "product_per_row_tablet",
        "label": "Products per row tablet",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "product_per_row_mobile",
        "label": "Products per row mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      },
      {
        "type": "range",
        "id": "limit",
        "label": "Limit",
        "min": 1,
        "max": 20,
        "step": 1,
        "default": 12
      },
      {
        "type": "header",
        "content": "Common settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Top DeskTop",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom Desktop",
        "default": 0
      },
      {
        "type": "header",
        "content": "Mobile settings"
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Top Mobile",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom Mobile",
        "default": 0
      }
    ],
    "presets": [
      {
        "name": "Products list"
      }
    ]
  }
{% endschema %}