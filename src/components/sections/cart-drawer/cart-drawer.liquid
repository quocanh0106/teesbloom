<link rel="stylesheet" href="{{ 'cart-drawer.css' | asset_url }}" />
{% assign original_price = 0 %}
{% assign shippingLimit = settings.minimum_freeshipping | append: '00' | plus: 0 %}
{% assign free_shipping = shippingLimit | money_without_trailing_zeros %}
{% assign one = 'templates.cart.pluralizatio.one' | t %}
{% assign other = 'templates.cart.pluralizatio.other' | t %}
{% if settings.country == 'US' %}
  {% assign placeholderImage = 'placeholder-image-us.svg' | asset_url %}
{% elsif settings.country == 'UK' %}
  {% assign placeholderImage = 'placeholder-image-uk.svg' | asset_url %}
{% elsif settings.country == 'DE' %}
  {% assign placeholderImage = 'placeholder-image-de.svg' | asset_url %}
{% elsif settings.country == 'FR' %}
  {% assign placeholderImage = 'placeholder-image-fr.svg' | asset_url %}
{% endif %}
{%- if cart.item_count > 0 -%}
  <div class="cart-empty text-center h-full rounded-lg px-4 py-6 lg:py-16 hidden">
    {% render 'icon-shoppingcartfilled', class: 'mx-auto w-16 h-16 mb-3' %}
    <span class="block mx-auto text-base font-heading leading-4 font-semibold text-primary mb-1">{{ 'sections.cart.empty' | t }}</span>
    <span class="block mx-auto text-sm leading-5 text-primary mb-5 max-w-[386px]">{{ 'sections.cart.empty_description' | t  }}</span>
    <a href="{{ routes.all_products_collection_url }}" class="block cursor-pointer mx-auto w-fit btn btn-2 px-6 lg:px-8 py-3.5 text-sm leading-none lg:text-base !uppercase lg:leading-none !font-heading !font-bold">
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>
  <cart-items class="w-full scroll-thin scroll-brighter overflow-auto {% if cart == empty %} is-empty {% else %} block{% endif %}">
    <div class="shopping-cart-main">
      <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
        <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
          <div class="js-contents">
            {%- if cart != empty -%}
              <table class="cart-items w-full border-none">
                {%- for item in cart.items -%}
                  <tr id="CartItem-{{ item.index | plus: 1 }}" class="{% unless forloop.last %}border-border border-b{% endunless %}" data-index="{{ item.index | plus: 1 }}">
                    <td class="table-cell border-none w-full items-center{% if forloop.first %} pb-4{% else %} py-4{% endif %} px-4" colspan="2" scope="col">
                      <div class="flex items-start">
                        {% if item.properties == empty %}
                          <modal-opener class="group block w-20 h-20 lg:w-24 lg:h-24 rounded flex-none overflow-hidden relative cursor-pointer" data-id="#preview-image-{{ item.index | plus: 1 }}">
                            <img src="{{ item.image | image_url: width: 160 }}" class="w-full h-full block object-cover leading-none bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent" alt="{{ item.image.alt | escape }}" width="160" height="{{ 160 | divided_by: item.image.aspect_ratio | ceil }}">
                            <div class="absolute bottom-1 right-1 rounded flex items-center justify-center p-1 w-5 h-5 lg:w-6 lg:h-6 bg-background-opacity-80 group-hover:bg-background-opacity-100 transition-all text-primary">
                              {% render 'icon-zoom', class: 'w-3 h-3 lg:w-4 lg:h-4' %}
                            </div>
                          </modal-opener>
                          <modal-dialog class="hidden fixed w-full h-full bg-black bg-opacity-20 top-0 left-0 z-20 group" id="preview-image-{{ item.index | plus: 1 }}">
                            <div class="text-center rounded-xl shadow-popup max-w-[calc(100vw_-_32px)] max-h-[calc(100vh_-_32px)] w-[860px] lg:overflow-auto bg-background absolute top-1/2 left-1/2 z-30 -translate-x-1/2 -translate-y-1/2">
                              <img src="{{ item.image | image_url: width: item.image.width }}" class="w-full h-full block object-cover leading-none !max-w-full !max-h-full bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent" width="{{ item.image.width }}" height="{{ item.image.height }}" loading="lazy" alt="{{ item.title | escape }}" />
                              <span class="text-primary cursor-pointer w-10 h-10 flex items-center justify-center rounded-full absolute -top-3 left-1/2 -translate-x-1/2 -translate-y-full lg:top-7 lg:right-7 lg:left-auto lg:translate-y-0 lg:translate-x-0 close">
                                {% render 'icon-close', class: 'w-6 h-6' %}
                              </span>
                            </div>
                          </modal-dialog>
                        {% else %}
                          {% if forloop.first %}
                            {% for p in item.properties %}
                              {% if p.first == '_customily-thumb' %}
                                <modal-opener class="group block w-20 h-20 lg:w-24 lg:h-24 rounded flex-none overflow-hidden relative cursor-pointer" data-id="#preview-image-{{ item.index | plus: 1 }}">
                                  <img src="{{ item.properties['_customily-thumb'] }}" data-thumb-src="{{ item.properties['_customily-thumb'] }}" class="w-full h-full block object-cover leading-none bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent" alt="{{ item.image.alt | escape }}" width="160" height="{{ 160 | divided_by: item.image.aspect_ratio | ceil }}">
                                  <div class="absolute bottom-1 right-1 rounded flex items-center justify-center p-1 w-5 h-5 lg:w-6 lg:h-6 bg-background-opacity-80 group-hover:bg-background-opacity-100 transition-all text-primary">
                                    {% render 'icon-zoom', class: 'w-3 h-3 lg:w-4 lg:h-4' %}
                                  </div>
                                </modal-opener>
                              {% endif %}
                              {% if p.first == '_customily-preview' %}
                                <modal-dialog class="hidden fixed w-full h-full bg-black bg-opacity-20 top-0 left-0 z-20 group" id="preview-image-{{ item.index | plus: 1 }}">
                                  <div class="text-center rounded-xl shadow-popup max-w-[calc(100vw_-_32px)] max-h-[calc(100vh_-_32px)] w-[860px] lg:overflow-auto bg-background absolute top-1/2 left-1/2 z-30 -translate-x-1/2 -translate-y-1/2">
                                    <img src="{{ item.properties['_customily-preview'] }}" data-thumb-src="{{ item.properties['_customily-preview'] }}" class="w-full h-full block object-cover leading-none !max-w-full !max-h-full bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent" width="{{ item.image.width }}" height="{{ item.image.height }}" loading="lazy" alt="{{ item.title | escape }}" />
                                    <span class="text-primary cursor-pointer w-10 h-10 flex items-center justify-center rounded-full absolute -top-3 left-1/2 -translate-x-1/2 -translate-y-full lg:top-7 lg:right-7 lg:left-auto lg:translate-y-0 lg:translate-x-0 close">
                                      {% render 'icon-close', class: 'w-6 h-6' %}
                                    </span>
                                  </div>
                                </modal-dialog>
                              {% endif %}
                            {% endfor %}
                          {% else %}
                            {% for p in item.properties %}
                              {% if p.first == '_customily-thumb' %}
                                <modal-opener class="group block w-20 h-20 lg:w-24 lg:h-24 flex-none relative cursor-pointer" data-id="#preview-image-{{ item.index | plus: 1 }}">
                                  <img src="{{ item.properties['_customily-thumb'] }}" data-placeholder="{{ placeholderImage }}" data-thumb-src="{{ item.properties['_customily-thumb'] }}" class="customily-item-image w-full h-full block object-cover leading-none rounded !max-w-full !max-h-full bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent" style="--image-placeholder: url({{ placeholderImage }});" width="160" height="160" loading="lazy" alt="{{ item.title | escape }}" />
                                  <div class="absolute bottom-1 right-1 rounded flex items-center justify-center p-1 w-5 h-5 lg:w-6 lg:h-6 bg-background-opacity-80 group-hover:bg-background-opacity-100 transition-all text-primary-700">
                                    {% render 'icon-zoom', class: 'w-3 h-3 lg:w-4 lg:h-4' %}
                                  </div>
                                </modal-opener>
                              {% endif %}
                              {% if p.first == '_customily-preview' %}
                                <modal-dialog class="hidden fixed w-full h-full bg-black bg-opacity-20 top-0 left-0 z-20" id="preview-image-{{ item.index | plus: 1 }}">
                                  <div class="group text-center rounded-xl shadow-popup max-w-[calc(100vw_-_32px)] max-h-[calc(100vh_-_32px)] w-[860px] lg:overflow-auto bg-background absolute top-1/2 left-1/2 z-30 -translate-x-1/2 -translate-y-1/2">
                                    <img src="{{ item.properties['_customily-preview'] }}" data-placeholder="{{ placeholderImage }}" data-thumb-src="{{ item.properties['_customily-preview'] }}" class="customily-item-image w-full h-full block object-cover leading-none !max-w-full !max-h-full bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent" style="--image-placeholder: url({{ placeholderImage }});" width="765" height="765" loading="lazy" alt="{{ item.title | escape }}" />
                                    <span class="text-primary cursor-pointer w-10 h-10 flex items-center justify-center rounded-full absolute -top-3 left-1/2 -translate-x-1/2 -translate-y-full lg:top-7 lg:right-7 lg:left-auto lg:translate-y-0 lg:translate-x-0 close">
                                      {% render 'icon-close', class: 'w-6 h-6' %}
                                    </span>
                                  </div>
                                </modal-dialog>
                              {% endif %}
                            {% endfor %}
                          {% endif %}
                        {% endif %}

                        <div class="w-full ml-2 lg:ml-3 flex flex-col min-h-[80px] lg:min-h-[96px]">
                          <div class="flex items-center justify-between gap-4">
                            <a href="{{ item.url }}" class="text-xs leading-2 lg:text-base lg:leading-4 font-medium font-heading no-underline text-primary hover:text-primary truncate-line one-line overflow-hidden" title="{{ item.product.title }}">
                              {{ item.product.title }}
                            </a>
                            <modal-opener class="block font-normal text-primary hover:text-primary transition-all text-xs text-center cursor-pointer ml-auto w-fit" data-id="#Popup-Remove-{{ item.index | plus: 1 }}">
                              {% render 'icon-trash', class: 'w-6 h-6' %}
                            </modal-opener>
                          </div>
                          {%- if item.product.has_only_default_variant == false or item.properties.size != 0 or item.selling_plan_allocation != nil -%}
                            <dl class="my-1.5">
                              {%- if item.product.has_only_default_variant == false -%}
                                {%- for option in item.options_with_values -%}
                                  <div class="product-option flex text-primary text-xs !leading-5 gap-0.5{% unless forloop.last %} mb-0.5{% endunless %} font-normal">
                                    <dt>{{ option.name }}:</dt>
                                    <dd>{{ option.value }}</dd>
                                  </div>
                                {%- endfor -%}
                              {%- endif -%}
                            </dl>
                          {%- endif -%}
                          <modal-dialog class="hidden fixed w-full h-full bg-black bg-opacity-20 top-0 left-0 z-20" id="Popup-Remove-{{ item.index | plus: 1 }}">
                            <div class="text-center p-0 shadow-popup w-[343px] bg-background rounded-xl max-w-[calc(100vw_-_32px)] absolute top-1/2 left-1/2 z-30 -translate-x-1/2 -translate-y-1/2">
                              <div class="px-5 pt-16 group loading">
                                <img
                                  src="{{ item.image | image_url: width: 160 }}"
                                  class="w-40 h-40 block object-cover leading-none !max-w-full !max-h-full rounded mx-auto mb-3 bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent"
                                  width="160"
                                  height="160"
                                  loading="lazy"
                                  alt="{{ item.title | escape }}" />
                              </div>
                              <p class="mt-3 mb-5 text-lg font-normal text-primary px-5">{{ 'sections.cart.content' | t }}</p>
                              <div class="grid grid-cols-2 justify-center gap-3 p-5 pb-6 border-t border-primary">
                                <span class="btn btn-2 w-full min-w-[124px] font-heading font-bold text-sm leading-none !uppercase cursor-pointer py-3.5 px-4 border close">
                                  {{ 'sections.cart.cancel' | t }}
                                </span>
                                <cart-remove-button
                                  class="w-full min-w-[124px] block leading-none close"
                                  id="Remove-{{ item.index | plus: 1 }}"
                                  data-index="{{ item.index | plus: 1 }}">
                                  <a href="{{ item.url_to_remove }}" class="btn border w-full font-heading font-bold text-sm leading-none !uppercase py-3.5 px-4 close">
                                    {{ 'sections.cart.remove' | t }}
                                  </a>
                                </cart-remove-button>
                              </div>
                              <span class="text-primary shadow-megamenu cursor-pointer bg-background w-8 h-8 flex items-center justify-center rounded-full absolute top-6 right-5 close">
                                {% render 'icon-close', class: 'w-5 h-5' %}
                              </span>
                            </div>
                          </modal-dialog>
                          <div class="flex items-center gap-2 justify-between mt-auto">
                            {% render 'lineitem-cart-drawer-price', product: item.variant %}
                            <quantity-input class="flex items-center relative w-fit h-5 rounded-3xl" data-index="{{ item.index | plus: 1 }}">
                              <button class="w-5 h-5 border border-[#f2f2f6] bg-[#f2f2f6] rounded-l-3xl relative text-secondary transition-all before:content-empty before:w-full before:h-full before:z-[1] before:absolute before:left-0 before:top-0" name="minus" type="button">
                                {% render 'icon-minus', class: 'w-3 h-3 mx-auto' %}
                              </button>
                              <input class="appearance-none border-none bg-[#f2f2f669] text-secondary text-xs leading-4 lg:text-base lg:leading-2 p-0.5 w-6 lg:w-12 h-full font-medium text-center !ring-0 shadow-none focus:border-none" inputmode="numeric" pattern="[0-9]*" type="number" name="updates[]" value="{{ item.quantity }}" min="0" id="Quantity-{{ item.index | plus: 1 }}" data-index="{{ item.index | plus: 1 }}">
                              <button class="w-5 h-5 border border-[#f2f2f6] bg-[#f2f2f6] rounded-r-3xl relative text-secondary transition-all before:content-empty before:w-full before:h-full before:z-[1] before:absolute before:left-0 before:top-0" name="plus" type="button">
                                {% render 'icon-plus', class: 'w-3 h-3 mx-auto' %}
                              </button>
                            </quantity-input>
                          </div>
                          <div class="cart-item__error-text text-error text-xs mt-1 empty:hidden" data-index="{{ item.index | plus: 1 }}"></div>
                          {% assign lineItemOriginalPrice = item.variant.compare_at_price | times: item.quantity %}
                          {% assign original_price = original_price | plus: lineItemOriginalPrice %}
                        </div>
                      </div>
                    </td>
                  </tr>
                {%- endfor -%}
              </table>
            {%- endif -%}
          </div>
        </div>
      </form>
    </div>
  </cart-items>
  <div class="w-full mt-auto block pb-6{% if cart == empty %} is-empty{% endif %} cart_footer" id="main-cart-footer" data-id="{{ section.id }}">
    <div class="js-contents" id="cart-drawer-total" {{ block.shopify_attributes }}>
      <ul class="px-4 py-6 border-t border-border grid gap-2">
        {% if original_price > cart.total_price %}
          <li class="flex items-center justify-between gap-2">
            <span class="text-sm font-normal text-primary capitalize leading-5">{{ 'sections.cart.original_price' | t }}</span>
            <span class="text-sm font-normal text-primary leading-5">
              {{ original_price | money }}
            </span>
          </li>
        {% endif %}
        <li class="flex items-center justify-between gap-2">
          <span class="text-sm font-normal text-primary capitalize leading-5">{{ 'sections.cart.shipping' | t }}</span>
          <span class="text-sm font-normal text-primary leading-5">{{ 'sections.cart.shipping_calculated' | t }}</span>
        </li>
        {% if cart.total_discount > 0 %}
          <li class="flex items-center justify-between gap-2">
            <span class="text-sm font-normal text-primary capitalize leading-5">{{ 'sections.cart.discount' | t }}</span>
            <span class="text-base font-normal text-sale leading-5">-{{ cart.total_discount | money }}</span>
          </li>
        {% endif %}

        <li class="flex items-center justify-between gap-2">
          <span class="text-sm font-normal text-primary capitalize leading-5">{{ 'sections.cart.subtotal' | t }}</span>
          <span class="text-h4 font-semibold text-primary font-heading leading-4 uppercase totals__subtotal-value">
            {{ cart.total_price | money }}
          </span>
        </li>
      </ul>
    </div>
    <div class="px-4 flex flex-wrap lg:flex-nowrap gap-3 lg:gap-4">
      <a href="{{ routes.cart_url }}" class="btn btn-2 !flex justify-center items-center w-full !uppercase !px-8 !py-3 text-center" title="{{ 'templates.cart.view_bag' | t }}">{{ 'templates.cart.view_bag' | t }}</a>
      <button type="submit" id="checkout" class="btn !flex justify-center items-center w-full !uppercase !px-8 !py-3" name="checkout"{% if cart == empty %} disabled{% endif %} form="cart">
        {{ 'sections.cart.checkout' | t }}
      </button>
    </div>
  </div>
{%- else -%}
  <div class="cart-empty text-center h-full rounded-lg px-4 py-6 lg:py-16">
    {% render 'icon-shoppingcartfilled', class: 'mx-auto w-16 h-16 mb-3' %}
    <span class="block mx-auto text-base font-heading leading-4 font-semibold text-primary mb-1">{{ 'sections.cart.empty' | t }}</span>
    <span class="block mx-auto text-sm leading-5 text-primary mb-5 max-w-[386px]">{{ 'sections.cart.empty_description' | t  }}</span>
    <a href="{{ routes.all_products_collection_url }}" class="block cursor-pointer mx-auto w-fit btn btn-2 px-6 lg:px-8 py-3.5 text-sm leading-none lg:text-base !uppercase lg:leading-none !font-heading !font-bold">
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>
{%- endif -%}

<script defer>
  document.addEventListener('DOMContentLoaded', function() {
    function isIE() {
      const ua = window.navigator.userAgent;
      const msie = ua.indexOf('MSIE ');
      const trident = ua.indexOf('Trident/');
      return(msie > 0 || trident > 0);
    }
    if (! isIE()) 
      return;
    const cartSubmitInput = document.createElement('input');
    cartSubmitInput.setAttribute('name', 'checkout');
    cartSubmitInput.setAttribute('type', 'hidden');
    document.querySelector('#cart').appendChild(cartSubmitInput);
    document.querySelector('#checkout').addEventListener('click', function(event) {
      document.querySelector('#cart').submit();
    });
  });
</script>

