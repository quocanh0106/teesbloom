{% assign hasProtect = false %}
{% for item in cart.items %}
  {% if item.product.id == settings.protect_order_product.id %}
    {% assign hasProtect = true %}
  {% endif %} 
{% endfor %}
{%- if cart != empty -%}
  {%- if cart.item_count < 100 -%}
    <span aria-hidden="true" class="flex justify-center items-center h-full text-xs leading-none">        
      {% if hasProtect %}
        {{ cart.item_count | minus: 1 }}
      {% else %}
        {{ cart.item_count }}
      {% endif %}
    </span>
  {% else %}
    <span aria-hidden="true" class="flex justify-center items-center h-full text-xs">+99</span>
  {%- endif -%}
{%- endif -%}