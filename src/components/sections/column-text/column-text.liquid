{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  @media (max-width: 767px) {
    .para:nth-child({{ section.settings.columns_mobile }}n)::after {
      display: none !important;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .para:nth-child({{ section.settings.columns_tablet }}n)::after {
      display: none !important;
    }
  }

  @media (min-width: 1024px) {
    .para:nth-child({{ section.settings.columns_desktop }}n)::after {
      display: none !important;
    }
  }
{%- endstyle -%}

{% if section.blocks.size > 0 %}
  <div
    class="page-width py-5"
    data-section-id="{{ section.id }}"
    style="background: {{ section.settings.background_color }};">
    {% if section.settings.heading != blank %}
      <h2 class="text-base lg:text-lg font-semibold text-center text-primary mb-2">{{ section.settings.heading | escape }}</h2>
    {% endif %}
    <div class="mx-auto grid grid-cols-{{ section.settings.columns_mobile }} md:grid-cols-{{ section.settings.columns_tablet }} lg:grid-cols-{{ section.settings.columns_desktop }}{% unless section.settings.columns_desktop > 2 %} lg:max-w-2/3{% endunless %}">
      {% for block in section.blocks %}
        <div class="para block w-full text-center px-7 py-10 lg:py-5 relative after:hidden after:md:block after:bg-border after:absolute after:right-[-0.5px] after:top-5 after:w-[1px] after:h-[calc(100%_-_80px)] last:after:!hidden">
          {% if block.settings.heading %}
            <span class="block text-lg font-semibold text-center text-primary !font-body mb-2.5">{{ block.settings.heading }}</span>
          {% endif %}
          {% if block.settings.description %}
            <div class="block text-primary text-xs text-justify leading-5 font-normal lg:text-sm">{{ block.settings.description }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Column text",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "Heading",
        "label": "Heading"
      },
      {
        "type": "range",
        "id": "columns_desktop",
        "label": "Items per row in desktop",
        "min": 1,
        "max": 6,
        "default": 2,
        "step": 1
      },
      {
        "type": "range",
        "id": "columns_tablet",
        "label": "Items per row in tablet",
        "min": 1,
        "max": 6,
        "default": 2,
        "step": 1
      }, {
        "type": "range",
        "id": "columns_mobile",
        "label": "Items per row in mobile",
        "min": 1,
        "max": 6,
        "default": 1,
        "step": 1
      }, {
        "type": "header",
        "content": "Padding desktop"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 20
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 20
      }, {
        "type": "header",
        "content": "Padding mobile"
      }, {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 40
      }
    ],
    "blocks": [
      {
        "name": "Item",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading item"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Column text"
      }
    ]
  }
{% endschema %}