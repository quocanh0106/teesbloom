{%- style -%}
  [data-section-id="{{ section.id }}"] {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media screen and (min-width: 1024px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media (min-width: 1024px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div data-section-id="{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading %}
      <{{ section.settings.heading_tag }} class="text-[22px] lg:text-2xl mb-4 capitalize text-center" style="color: {{ section.settings.colors_heading }}">
        {{ section.settings.heading }}
      </{{ section.settings.heading_tag }}>
    {% endif %}
    {% if section.blocks.size > 0 %}
      <span class="hidden grid-cols-2 grid-cols-3 grid-cols-4 grid-cols-5 grid-cols-6 md:grid-cols-2 md:grid-cols-3 md:grid-cols-4 md:grid-cols-5 md:grid-cols-6 lg:grid-cols-2 lg:grid-cols-3 lg:grid-cols-4 lg:grid-cols-5 lg:grid-cols-6"></span>
      <div class="grid gap-x-4 gap-y-8 grid-cols-{{ section.settings.columns_mobile }} md:grid-cols-{{ section.settings.columns_tablet }} lg:grid-cols-{{ section.settings.columns_desktop }}">
        {% for block in section.blocks %}
          <a href="{{ block.settings.url }}" class="group rounded-2xl p-2.5 flex items-center justify-center border border-solid border-current text-current w-full text-center" style="color: {{ block.settings.border_color }};">
            <div class="relative flex items-center justify-center">
              {% if block.settings.heading %}
                <h3 class="text-base capitalize font-medium font-heading text-[#121212] pr-5">
                  {{ block.settings.heading }}
                </h3>
              {% endif %}
              {% render 'icon-arrow-right', class: 'w-4 h-4 transition-all absolute right-0 group-hover:-right-1' %}
            </div>
          </a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Image with text",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "select",
        "id": "heading_tag",
        "label": "Heading tag",
        "default": "h2",
        "options": [
          {
            "value": "h1",
            "label": "Heading 1"
          },
          {
            "value": "h2",
            "label": "Heading 2"
          },
          {
            "value": "h3",
            "label": "Heading 3"
          },
          {
            "value": "h4",
            "label": "Heading 4"
          },
          {
            "value": "h5",
            "label": "Heading 5"
          }
        ]
      },
      {
        "type": "color",
        "id": "colors_heading",
        "default": "#ffffff",
        "label": "Color heading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "items settings"
      },
      {
        "type": "range",
        "id": "columns_desktop",
        "label": "Items per row in desktop",
        "min": 1,
        "max": 6,
        "default": 4,
        "step": 1
      },
      {
        "type": "range",
        "id": "columns_tablet",
        "label": "Items per row in tablet",
        "min": 1,
        "max": 6,
        "default": 4,
        "step": 1
      },
      {
        "type": "range",
        "id": "columns_mobile",
        "label": "Items per row in mobile",
        "min": 1,
        "max": 6,
        "default": 2,
        "step": 1
      },
      {
        "type": "header",
        "content": "Padding settings"
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "label": "Padding mobile top",
        "min": 0,
        "max": 200,
        "unit": "px",
        "step": 2,
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "label": "Padding mobile bottom",
        "min": 0,
        "max": 200,
        "unit": "px",
        "step": 2,
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding desktop top",
        "min": 0,
        "max": 200,
        "unit": "px",
        "step": 2,
        "default": 92
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding desktop bottom",
        "min": 0,
        "max": 200,
        "unit": "px",
        "step": 2,
        "default": 92
      }
    ],
    "blocks": [
      {
        "name": "Box link",
        "type": "box",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "url",
            "id": "url",
            "label": "URL"
          },
          {
            "type": "color",
            "id": "border_color",
            "label": "Border color"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Link box"
      }
    ]
  }
{% endschema %}