{%- style -%}
  [data-section-id="{{ section.id }}"] {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media screen and (min-width: 1024px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media (min-width: 1024px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div data-section-id="{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading %}
      <{{ section.settings.heading_tag }} class="text-base lg:text-lg text-center font-semibold text-primary mb-5">
        {{ section.settings.heading }}
        </{{ section.settings.heading_tag }}>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="flex flex-wrap justify-center gap-3">
          {% for block in section.blocks %}
            <a
              href="{{ block.settings.url }}"
              class="group rounded-[100px] text-base leading-5 px-4 py-1.5 flex items-center justify-center text-current w-fit text-center"
              style="color: {{ block.settings.text_color }};background-color: {{ block.settings.background_color }};">
              {% if block.settings.heading %}
                {{ block.settings.heading }}
              {% endif %}
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

  {% schema %}
    {
      "name": "Link box",
      "tag": "section",
      "class": "section",
      "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Heading tag",
          "default": "h2",
          "options": [
            {
              "value": "h1",
              "label": "Heading 1"
            },
            {
              "value": "h2",
              "label": "Heading 2"
            },
            {
              "value": "h3",
              "label": "Heading 3"
            },
            {
              "value": "h4",
              "label": "Heading 4"
            }, {
              "value": "h5",
              "label": "Heading 5"
            }
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "header",
          "content": "Padding desktop"
        }, {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Padding top",
          "default": 20
        }, {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Padding bottom",
          "default": 20
        }, {
          "type": "header",
          "content": "Padding mobile"
        }, {
          "type": "range",
          "id": "padding_top_mb",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Padding top",
          "default": 40
        }, {
          "type": "range",
          "id": "padding_bottom_mb",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Padding bottom",
          "default": 40
        }
      ],
      "blocks": [
        {
          "name": "Box link",
          "type": "box",
          "settings": [
            {
              "type": "text",
              "id": "heading",
              "label": "Heading"
            }, {
              "type": "url",
              "id": "url",
              "label": "URL"

            }, {
              "type": "color",
              "id": "text_color",
              "default": "#000",
              "label": "Text color"
            }, {
              "type": "color",
              "id": "background_color",
              "default": "#F7F7F7",
              "label": "Background color"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Link box"
        }
      ]
    }
  {% endschema %}